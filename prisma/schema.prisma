generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Address {
  id         Int      @id @default(autoincrement())
  propertyId Int      @unique
  street     String?
  city       String?
  state      String?
  postalCode String?
  country    String?
  latitude   Float?
  longitude  Float?
  Property   Property @relation(fields: [propertyId], references: [id])
}

model Agent {
  id        Int        @id @default(autoincrement())
  userId    Int        @unique
  agency    String?
  licenseNo String?
  User      User       @relation(fields: [userId], references: [id])
  Property  Property[]
}

model Amenity {
  id              Int               @id @default(autoincrement())
  name            String            @unique
  PropertyAmenity PropertyAmenity[]
}

model Favorite {
  userId     Int
  propertyId Int
  savedAt    DateTime @default(now())
  Property   Property @relation(fields: [propertyId], references: [id])
  User       User     @relation(fields: [userId], references: [id])

  @@id([userId, propertyId])
}

model Inquiry {
  id           Int      @id @default(autoincrement())
  propertyId   Int
  buyerId      Int?
  message      String?
  contactPhone String?
  status       String   @default("new")
  createdAt    DateTime @default(now())
  User         User?    @relation(fields: [buyerId], references: [id])
  Property     Property @relation(fields: [propertyId], references: [id])
}

model Property {
  id              Int               @id @default(autoincrement())
  agentId         Int
  title           String
  description     String?
  price           Float
  propertyType    String
  bedrooms        Int?
  bathrooms       Int?
  areaSqft        Int?
  listingStatus   String            @default("active")
  createdAt       DateTime          @default(now())
  updatedAt       DateTime
  Address         Address?
  Favorite        Favorite[]
  Inquiry         Inquiry[]
  Agent           Agent             @relation(fields: [agentId], references: [id])
  PropertyAmenity PropertyAmenity[]
  PropertyImage   PropertyImage[]
}

model PropertyAmenity {
  propertyId Int
  amenityId  Int
  Amenity    Amenity  @relation(fields: [amenityId], references: [id])
  Property   Property @relation(fields: [propertyId], references: [id])

  @@id([propertyId, amenityId])
}

model PropertyImage {
  id         Int      @id @default(autoincrement())
  propertyId Int
  url        String
  altText    String?
  sortOrder  Int      @default(0)
  Property   Property @relation(fields: [propertyId], references: [id])
}

model User {
  id        Int        @id @default(autoincrement())
  password  String
  createdAt DateTime   @default(now())
  email     String     @unique
  fullName  String?
  phone     String?
  role      Role       @default(BUYER)
  Agent     Agent?
  Favorite  Favorite[]
  Inquiry   Inquiry[]
}

enum Role {
  BUYER
  AGENT
  ADMIN
}
