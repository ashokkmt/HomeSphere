generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int            @id @default(autoincrement())
  password      String
  createdAt     DateTime       @default(now())
  email         String         @unique
  fullName      String?
  phone         String?
  role          Role           @default(BUYER)
  favorites     Favorite[]
  properties    Property[]
  refreshTokens RefreshToken[]

  // Buyer inquiries
  inquiries         Inquiry[] @relation("buyer_inquiries")
  // Seller inquiries (NEW)
  receivedInquiries Inquiry[] @relation("seller_inquiries")

  sentMessages InquiryMessage[] @relation("UserSentMessages")
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  tokenHash String
  userId    Int
  createdAt DateTime @default(now())
  expiresAt DateTime
  revoked   Boolean  @default(false)
  user      User     @relation(fields: [userId], references: [id])
}

model Property {
  id            Int               @id @default(autoincrement())
  title         String
  description   String?
  price         Float
  propertyType  String
  bedrooms      Int?
  bathrooms     Int?
  areaSqft      Int?
  listingStatus String            @default("active")
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  userId        Int
  address       Address?
  favorites     Favorite[]
  inquiries     Inquiry[]
  user          User              @relation(fields: [userId], references: [id])
  amenities     PropertyAmenity[]
  images        PropertyImage[]
}

model Address {
  id         Int      @id @default(autoincrement())
  propertyId Int      @unique
  street     String?
  city       String?
  state      String?
  postalCode String?
  country    String?
  latitude   Float?
  longitude  Float?
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
}

model PropertyImage {
  id         Int      @id @default(autoincrement())
  propertyId Int
  url        String
  altText    String?
  sortOrder  Int      @default(0)
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
}

model Amenity {
  id         Int               @id @default(autoincrement())
  name       String            @unique
  properties PropertyAmenity[]
}

model PropertyAmenity {
  propertyId Int
  amenityId  Int
  amenity    Amenity  @relation(fields: [amenityId], references: [id])
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@id([propertyId, amenityId])
}

model Inquiry {
  id         Int           @id @default(autoincrement())
  propertyId Int
  buyerId    Int?
  sellerId   Int // auto-filled from property.userId
  status     InquiryStatus @default(OPEN)
  createdAt  DateTime      @default(now())

  // Relations
  buyer    User?    @relation("buyer_inquiries", fields: [buyerId], references: [id])
  seller   User     @relation("seller_inquiries", fields: [sellerId], references: [id])
  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  messages InquiryMessage[]
}

model InquiryMessage {
  id        Int      @id @default(autoincrement())
  inquiryId Int
  senderId  Int
  message   String
  createdAt DateTime @default(now())

  inquiry Inquiry @relation(fields: [inquiryId], references: [id], onDelete: Cascade)

  sender User @relation("UserSentMessages", fields: [senderId], references: [id])
}

model Favorite {
  userId     Int
  propertyId Int
  savedAt    DateTime @default(now())
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id])

  @@id([userId, propertyId])
}

enum Role {
  BUYER
  AGENT
  ADMIN
}

enum InquiryStatus {
  OPEN
  CLOSED
}
